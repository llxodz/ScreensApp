<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_layout_methods_payment">

    <TextView
        android:id="@+id/rv_tv_paid_time"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="1 месяц"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/rv_tv_cost_paid_time"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="24sp"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/black"
        android:text="499 руб."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    
    <TextView
        android:id="@+id/rv_tv_description_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Ежемесячная подписка"
        android:fontFamily="@font/sf_pro_regular"
        android:textSize="16sp"
        android:textColor="@color/primaryGray"
        app:layout_constraintTop_toBottomOf="@id/rv_tv_paid_time"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>